doctype html
html
    head
        title Express Template

        style.
            * {
                padding: 0;
                margin: 0;
                box-sizing: border-box;
                text-decoration: none;
                list-style: none;
                letter-spacing: 1.5px;
                line-height: 1.3;   
                text-transform: uppercase;

                }
            body {
            font-family: arial;
            color: lightGray;
            }

            header {
                background-color: grey;
                height: 100vh;
              
            }

            nav {
                display: flex;
                justify-content: space-between;
                padding: 5%;
            }
            ul {
                display: flex;
            }
            ul li {
                margin:0  2em;
            }

            ul li a {
                color: lightGray;
                font-weight: bold;
            }
            ul li a:hover {
                color: white;
                
            }

            .header-text {
                display:flex;
                justify-content: center;
                align-items: center;
                height: 50%;
                flex-direction: column;
            }
            h1 {
                color: lightBlue;
                font-size: 3em;
                margin-bottom: 2em;
            }
        
